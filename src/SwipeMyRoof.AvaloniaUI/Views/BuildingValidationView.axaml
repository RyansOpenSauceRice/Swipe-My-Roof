<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SwipeMyRoof.AvaloniaUI.ViewModels"
             xmlns:views="using:SwipeMyRoof.AvaloniaUI.Views"
             xmlns:controls="using:SwipeMyRoof.AvaloniaUI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="SwipeMyRoof.AvaloniaUI.Views.BuildingValidationView"
             x:DataType="vm:BuildingValidationViewModel">

    <UserControl.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
        
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
        </Style>
        
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15 10"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        
        <Style Selector="Border.warning">
            <Setter Property="BorderBrush" Value="#FF8800"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="Background" Value="#FFF8E1"/>
        </Style>
        
        <Style Selector="Border.practice">
            <Setter Property="BorderBrush" Value="#0077FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Practice Mode Banner -->
        <Border Grid.Row="0" Classes="practice" IsVisible="{Binding IsPracticeMode}">
            <TextBlock Text="{Binding GetPracticeModeBanner}" HorizontalAlignment="Center" FontWeight="Bold"/>
        </Border>
        
        <!-- Main Content with Responsive Layout -->
        <ScrollViewer Grid.Row="1" Margin="10" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <!-- Use a panel that adapts to screen size -->
            <Panel>
                <!-- Desktop Layout (two columns) -->
                <Grid ColumnDefinitions="*,*" Margin="5" IsVisible="{Binding !IsNarrowView}">
                    <!-- Left Column - Building Map -->
                    <Border Grid.Column="0" Classes="card" Margin="0 0 10 0">
                        <Grid RowDefinitions="Auto,*">
                            <TextBlock Grid.Row="0" Classes="h2" Text="Building Satellite View"/>
                            <Border Grid.Row="1" Margin="0 10 0 0" MinHeight="300">
                                <controls:BuildingMapControl DataContext="{Binding BuildingMapViewModel}"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Right Column - Building Information -->
                    <StackPanel Grid.Column="1" Margin="10 0 0 0">
                        <!-- Building Information -->
                        <Border Classes="card">
                            <StackPanel>
                                <TextBlock Classes="h2" Text="Building Information"/>
                                <TextBlock Classes="label" Text="Building ID"/>
                                <TextBlock Text="{Binding CurrentBuilding.OsmId}" Margin="0 0 0 10"/>
                                
                                <TextBlock Classes="label" Text="Proposed Color"/>
                                <TextBlock Text="{Binding ProposedColorValue}" Margin="0 0 0 10"/>
                                
                                <TextBlock Classes="label" Text="Explanation"/>
                                <TextBlock Text="{Binding ProposedColorExplanation}" TextWrapping="Wrap" Margin="0 0 0 10"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Confidence Indicator -->
                        <Border Classes="card" IsVisible="{Binding ShowConfidenceIndicator}">
                            <StackPanel>
                                <TextBlock Classes="h2" Text="AI Confidence"/>
                                <ProgressBar Value="{Binding ConfidenceIndicator.ConfidencePercentage}" 
                                             Minimum="0" Maximum="100" Height="20" Margin="0 5 0 5"/>
                                <TextBlock Text="{Binding ConfidenceIndicator.Description}" Margin="0 5 0 0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Warning Message -->
                        <Border Classes="warning" IsVisible="{Binding HasWarning}">
                            <TextBlock Text="{Binding GetWarningMessage}" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Grid>
                
                <!-- Mobile Layout (single column) -->
                <StackPanel Margin="5" IsVisible="{Binding IsNarrowView}">
                    <!-- Building Map -->
                    <Border Classes="card">
                        <Grid RowDefinitions="Auto,*">
                            <TextBlock Grid.Row="0" Classes="h2" Text="Building Satellite View"/>
                            <Border Grid.Row="1" Margin="0 10 0 0" MinHeight="200">
                                <controls:BuildingMapControl DataContext="{Binding BuildingMapViewModel}"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Building Information -->
                    <Border Classes="card">
                        <StackPanel>
                            <TextBlock Classes="h2" Text="Building Information"/>
                            <TextBlock Classes="label" Text="Building ID"/>
                            <TextBlock Text="{Binding CurrentBuilding.OsmId}" Margin="0 0 0 10"/>
                            
                            <TextBlock Classes="label" Text="Proposed Color"/>
                            <TextBlock Text="{Binding ProposedColorValue}" Margin="0 0 0 10"/>
                            
                            <TextBlock Classes="label" Text="Explanation"/>
                            <TextBlock Text="{Binding ProposedColorExplanation}" TextWrapping="Wrap" Margin="0 0 0 10"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Confidence Indicator -->
                    <Border Classes="card" IsVisible="{Binding ShowConfidenceIndicator}">
                        <StackPanel>
                            <TextBlock Classes="h2" Text="AI Confidence"/>
                            <ProgressBar Value="{Binding ConfidenceIndicator.ConfidencePercentage}" 
                                         Minimum="0" Maximum="100" Height="20" Margin="0 5 0 5"/>
                            <TextBlock Text="{Binding ConfidenceIndicator.Description}" Margin="0 5 0 0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Warning Message -->
                    <Border Classes="warning" IsVisible="{Binding HasWarning}">
                        <TextBlock Text="{Binding GetWarningMessage}" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Panel>
        </ScrollViewer>
        
        <!-- Action Buttons - Fixed at bottom for easy access on mobile -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0 1 0 0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding RejectBuildingCommand}" Background="#FF5252" 
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✕" FontWeight="Bold" Margin="0 0 5 0"/>
                        <TextBlock Text="Reject"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding SkipBuildingCommand}" Background="#757575"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⟳" FontWeight="Bold" Margin="0 0 5 0"/>
                        <TextBlock Text="Skip"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding AcceptBuildingCommand}" Background="#4CAF50"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✓" FontWeight="Bold" Margin="0 0 5 0"/>
                        <TextBlock Text="Accept"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding ShowColorPickerCommand}" Background="#FF9800"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🎯" FontWeight="Bold" Margin="0 0 5 0"/>
                        <TextBlock Text="Pick Color"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Color Picker Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" IsVisible="{Binding ShowColorPicker}" ZIndex="100">
            <Border Background="White" CornerRadius="10" Margin="20" MaxWidth="800" MaxHeight="600">
                <views:ColorPickerView DataContext="{Binding ColorPickerViewModel}"/>
            </Border>
        </Border>
    </Grid>
</UserControl>