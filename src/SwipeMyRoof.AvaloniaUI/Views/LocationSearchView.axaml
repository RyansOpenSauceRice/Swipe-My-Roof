<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SwipeMyRoof.AvaloniaUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
             x:Class="SwipeMyRoof.AvaloniaUI.Views.LocationSearchView"
             x:DataType="vm:LocationSearchViewModel">

    <UserControl.Styles>
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
        </Style>
        
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 5 0 2"/>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="Background" Value="#F9F9F9"/>
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 2"/>
        </Style>
        
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>
        
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
    </UserControl.Styles>

    <StackPanel Margin="10">
        <!-- Header -->
        <Border Classes="card">
            <StackPanel>
                <TextBlock Classes="h2" Text="Location Search"/>
                <TextBlock Text="Search for a city, state, country, or address to start validating roof colors in that area." 
                           TextWrapping="Wrap" Foreground="#666666"/>
            </StackPanel>
        </Border>
        
        <!-- Search Input -->
        <Border Classes="card">
            <StackPanel>
                <TextBlock Classes="label" Text="Search Location:"/>
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchQuery}" 
                             Watermark="e.g., Seattle, Washington or Main Street, Boston"
                             Margin="0 5 5 0"/>
                    
                    <Button Grid.Column="1" 
                            Command="{Binding SearchCommand}"
                            Background="#2196F3"
                            IsEnabled="{Binding !IsSearching}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" Margin="0 0 5 0"/>
                            <TextBlock Text="Search"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Grid.Column="2" 
                            Command="{Binding ClearSearchCommand}"
                            Background="#757575">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✕" Margin="0 0 5 0"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           Margin="0 10 0 0" 
                           FontStyle="Italic" 
                           Foreground="#666666"/>
                
                <!-- Loading Indicator -->
                <ProgressBar IsIndeterminate="True" 
                             IsVisible="{Binding IsSearching}" 
                             Margin="0 10 0 0" 
                             Height="4"/>
            </StackPanel>
        </Border>
        
        <!-- Search Results -->
        <Border Classes="card" IsVisible="{Binding SearchResults.Count}">
            <StackPanel>
                <TextBlock Classes="h2" Text="Search Results"/>
                <TextBlock Text="Click on a location to select it as your validation area." 
                           FontSize="12" Foreground="#666666" Margin="0 0 0 10"/>
                
                <ListBox ItemsSource="{Binding SearchResults}" 
                         MaxHeight="300" 
                         Margin="0 10 0 0"
                         Background="White"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding DisplayName}" 
                                           FontWeight="SemiBold" 
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Type}" 
                                           FontSize="12" 
                                           Foreground="#666666" 
                                           Margin="0 2 0 0"/>
                                <TextBlock FontSize="11" 
                                           Foreground="#888888" 
                                           Margin="0 2 0 0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Lat: {0:F4}, Lon: {1:F4}">
                                            <Binding Path="Location.Lat"/>
                                            <Binding Path="Location.Lon"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    
                    <Interaction.Behaviors>
                        <EventTriggerBehavior EventName="SelectionChanged">
                            <InvokeCommandAction Command="{Binding SelectLocationCommand}" 
                                                 CommandParameter="{Binding $parent[ListBox].SelectedItem}"/>
                        </EventTriggerBehavior>
                    </Interaction.Behaviors>
                </ListBox>
            </StackPanel>
        </Border>
        
        <!-- Selected Location -->
        <Border Classes="card" IsVisible="{Binding SelectedLocation, Converter={x:Static ObjectConverters.IsNotNull}}">
            <StackPanel>
                <TextBlock Classes="h2" Text="Selected Location"/>
                
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0 10 0 0">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0 0 10 5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedLocation.DisplayName}" TextWrapping="Wrap" Margin="0 0 0 5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0 0 10 5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedLocation.Type}" Margin="0 0 0 5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Coordinates:" FontWeight="SemiBold" Margin="0 0 10 5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Margin="0 0 0 5">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F4}, {1:F4}">
                                <Binding Path="SelectedLocation.Location.Lat"/>
                                <Binding Path="SelectedLocation.Location.Lon"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Search Area:" FontWeight="SemiBold" Margin="0 0 10 0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="5 km radius around this location"/>
                </Grid>
                
                <TextBlock Text="This location will be used to find buildings for roof color validation. The app will randomly select buildings within a 5 km radius of this point." 
                           TextWrapping="Wrap" 
                           FontSize="12" 
                           Foreground="#666666" 
                           Margin="0 15 0 0"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>