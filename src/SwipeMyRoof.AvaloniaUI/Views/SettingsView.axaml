<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SwipeMyRoof.AvaloniaUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="SwipeMyRoof.AvaloniaUI.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <UserControl.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
        
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
        </Style>
        
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
        
        <Style Selector="CheckBox">
            <Setter Property="Margin" Value="0 5 0 10"/>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Margin" Value="0 10 10 0"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Classes="h1">Settings</TextBlock>
            
            <!-- AI Model Settings -->
            <TextBlock Classes="h2">AI Model Settings</TextBlock>
            
            <TextBlock Classes="label">AI Provider</TextBlock>
            <ComboBox ItemsSource="{Binding Providers}"
                      SelectedItem="{Binding SelectedProvider}"/>
            
            <TextBlock Classes="label">AI Model</TextBlock>
            <ComboBox ItemsSource="{Binding Models}"
                      SelectedItem="{Binding SelectedModel}"/>
            
            <TextBlock Classes="label">API Key</TextBlock>
            <TextBox Text="{Binding ApiKey}" PasswordChar="*"/>
            
            <CheckBox IsChecked="{Binding UseCustomEndpoint}">
                Use Custom Endpoint
            </CheckBox>
            
            <TextBlock Classes="label" IsVisible="{Binding UseCustomEndpoint}">Base URL</TextBlock>
            <TextBox Text="{Binding BaseUrl}" IsVisible="{Binding UseCustomEndpoint}"/>
            
            <!-- Application Settings -->
            <TextBlock Classes="h2">Application Settings</TextBlock>
            
            <CheckBox IsChecked="{Binding ShowConfidenceIndicator}">
                Show Confidence Indicator
            </CheckBox>
            
            <!-- Save Button -->
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding SaveSettingsCommand}">
                    Save Settings
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>